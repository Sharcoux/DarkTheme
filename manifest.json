{
  "manifest_version": 2,
  "name": "DarkTheme",
  "version": "1.4",
  "description": "Create a dark theme for any webpage.",
  "icons": {
    "48": "dark.png"
  },
  "background": {
    "scripts": [
      "button.js"
    ]
  },
  "permissions": [
    "activeTab"
  ],
  "browser_action": {
    "default_icon": "dark.png",
    "default_title": "DarkTheme"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "dark.js"
      ]
    }
  ]
}